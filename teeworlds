FROM alpine:latest AS build
RUN apk update
RUN apk add --no-cache git
RUN git clone https://github.com/teeworlds/teeworlds
RUN apk add --no-cache \
		cmake \
		curl-dev \
		make \
		g++ \
		gcc \
		python3 \
		sqlite-dev \
		zlib-dev
WORKDIR /teeworlds
RUN git switch 0.6
RUN git submodule update --init
RUN mkdir build
WORKDIR build
RUN cmake .. -Wno-dev \
		-DCLIENT=OFF
RUN make install -j$(nproc)

FROM alpine:latest
RUN apk add --no-cache curl-dev libstdc++ sqlite-dev
COPY --from=build /usr/local/share/teeworlds/ /usr/local/share/teeworlds/
COPY --from=build /usr/local/bin/ /usr/local/bin/
WORKDIR /usr/local/share/teeworlds/data/
ENTRYPOINT ["teeworlds_srv"]
